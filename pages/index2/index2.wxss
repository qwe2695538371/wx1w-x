/* pages/index2/index2.wxss */
page {
    background-color: #f8f8f8;
    height: 100%;
    display: flex;
    justify-content: center; /* 垂直居中 */
  }
  
  .container {
    width: 80%;
    height: 60%;
    padding: 60rpx 40rpx;
    background: #fff;
    border-radius: 24rpx;
    border: 1rpx solid #e0e0e0;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
  }
  
  .title {
    font-size: 36rpx;
    font-weight: bold;
    color: #000;
    margin-bottom: 80rpx;
  }
  
  .input-group {
    width: 80%;
    margin-right: 70rpx ;
  }
  
  .input-item {
    margin-bottom: 50rpx;
  }
  
  .input-box {
    width: 100%;
    height: 88rpx;
    background: #fff;
    border: 1rpx solid #e0e0e0;
    border-radius: 8rpx;
    padding: 0 30rpx;
    font-size: 28rpx;
  }
  
  .placeholder {
    color: #999;
  }
  
  .submit-btn {
    width: 80%;
    height: 88rpx;
    background: #ccc;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
    border-radius: 44rpx;
    margin-top: 20rpx;
  }
  .disabled-btn {
    background-color: #CCCCCC;
    color: #FFFFFF;
    opacity: 0.7;
  }
  
  .active-btn {
    background-color: #07C160;
    color: #FFFFFF;
  }