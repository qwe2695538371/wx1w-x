/* pages/index4/index4.wxss */
.container {
    padding: 40rpx;
    background: #fff;
    min-height: 100vh;
  }
  
  .section {
    margin-bottom: 60rpx;
  }
  
  .section-title {
    display: block;
    font-size: 32rpx;
    color: #333;
    margin-bottom: 40rpx;
  }
  
  /* 分类样式 */
  .category-group {
    display: flex;
    flex-wrap: wrap;
  }
  
  .category-item {
    width: 200rpx;
    height: 200rpx;
    margin-right: 20rpx;
    margin-bottom: 30rpx;
    text-align: center;
    background-color: #cee9db;
    border-radius: 25rpx;
  }
  .category-item.selected {
    background: #1890ff;
    border-radius: 16rpx;
  }
  
  .category-item.selected .category-name {
    color: white;
  }
  
  .category-item.selected .icon-circle {
    background: rgba(255,255,255,0.2) !important;
  }
  
  .icon-circle {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin: 0 auto 0rpx;
    margin-top: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .category-icon {
    width: 60rpx;
    height: 60rpx;
  }
  
  .category-name {
    font-size: 24rpx;
    color: #666;
  }
  
  /* 金额样式 */
  .amount-box {
    height: 120rpx;
    border-bottom: 2rpx solid #eee;
    display: flex;
    align-items: center;
  }
  
  .amount {
    font-size: 56rpx;
    color: #333;
    font-weight: bold;
  }
  .amount-box::before {
    content: "￥";
    color: #07C160;
    font-weight: bold;
    font-size: 56rpx;
    margin-right: 10rpx;
  }
  .amount-input {
    font-size: 56rpx;
    color: #333;
    height: 100%;
    flex: 1;
  }
  /* 时间样式 */
  .time-box {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
    border-bottom: 2rpx solid #eee;
  }
  
 /* 日期输入框样式 */
.date-input {
    font-size: 32rpx;
    color: #333;
    flex: 1;
    padding-left: 20rpx;
  }
  
  .calendar-icon {
    width: 40rpx;
    height: 40rpx;
  }
  
  /* 确认按钮 */
  .footer {
    bottom: 60rpx;
    left: 0;
    right: 0;
    padding: 0 40rpx;
  }
    /* 正常状态 */
  .confirm-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    background: #07C160 !important;
    color: #fff !important;
    border-radius: 50rpx;
    font-size: 34rpx;
    height: 90rpx;
    line-height: 90rpx;
    transition: all 0.3s ease;
  }
  
  /* 禁用状态 */
  .confirm-btn.disabled {
    background: #F5F5F5 !important;
    color: #CCCCCC !important;
    cursor: not-allowed;
  }
  
  /* 去除按钮默认样式 */
  button::after {
    border: none !important;
  }